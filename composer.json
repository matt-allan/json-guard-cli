{
    "name": "yuloh/json-guard-cli",
    "type": "library",
    "description": "A CLI tool for json-guard",
    "keywords": [
        "yuloh",
        "json-guard-cli",
        "JSON Schema",
        "JSON",
        "Schema",
        "validate"
    ],
    "homepage": "https://github.com/yuloh/json-guard-cli",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Allan",
            "email": "matthew.james.allan@gmail.com",
            "homepage": "http://mattallan.org",
            "role": "Developer"
        }
    ],
    "require": {
        "mnapoli/silly": "^1.3",
        "league/json-guard": "^1.0",
        "seld/jsonlint": "^1.4",
        "league/json-reference": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Yuloh\\JsonGuardCli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yuloh\\JsonGuardCli\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=psr2 ./json-guard ./src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "bin": [
        "json-guard"
    ]
}
